<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">




    <!-- 圆角 -->
    <corners android:radius="12dp" />

    <!-- 阴影/边框（可选） -->
    <stroke
        android:width="1dp"
        android:color="#22000000" />

    <!-- 内边距（可选，避免内容紧贴边缘） -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
